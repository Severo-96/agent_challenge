{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}

